<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.wordpress.lonelytripblog.funwithflags.GameViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:setImage="@{viewmodel.countryImageResource}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_background"
                android:onClick="@{() -> viewmodel.getAnswerByUser(0)}"
                android:text="@{viewmodel.countriesList.get(0)}" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_background"
                android:onClick="@{() -> viewmodel.getAnswerByUser(1)}"
                android:text="@{viewmodel.countriesList.get(1)}" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_background"
                android:onClick="@{() -> viewmodel.getAnswerByUser(2)}"
                android:text="@{viewmodel.countriesList.get(2)}" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_background"
                android:onClick="@{() -> viewmodel.getAnswerByUser(3)}"
                android:text="@{viewmodel.countriesList.get(3)}" />
        </RelativeLayout>

    </LinearLayout>

</layout>
